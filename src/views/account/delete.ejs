<% if (locals.user) { %>
<h1>Delete Account</h1>
<form class="row g-3" method="post" action="./account/<%= locals.user.id %>/delete">
  <input type="hidden" name="id" value="<%= locals.user %>" />
  <div class="col-md-12">
  <div class="col-12">
    <div class="form-check">
      <input type="checkbox" class="form-check-input" id="confirm" required/>
      <label class="form-check-label" for="confirm">
        Confirm
      </label>
    </div>
  </div>
  <div class="col-12">
    <button type="submit" class="btn btn-primary" autofocus="autofocus">Delete</button>
  </div>
</form>
<% } %>
