<h1>Create account</h1>
<form class="row g-3" method="POST" autocomplete="off" action="./account/create">
  <div class="col-md-12">
    <input autocomplete="off" type="text" class="form-control" id="accountUsername" name="username" placeholder="Enter a username. Make it unique" required autofocus />
    <input autocomplete="off" type="text" class="form-control" id="accountPassword" name="password" placeholder="Enter a password" required autofocus />
  </div>
  <div class="col-12">
    <div class="form-check">
    </div>
  </div>
  <div class="col-12">
    <button type="submit" class="btn btn-primary">Create</button>
  </div>
</form>
